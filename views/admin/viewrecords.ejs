                .then(response => response.json())
                .then(sitins => {
                    const purposeCounts = {};
                    const labCounts = {};
                    const tableBody = document.getElementById('sitins-table-body');

                    sitins.forEach(sitin => {
                        // Update purpose counts
                        purposeCounts[sitin.purpose] = (purposeCounts[sitin.purpose] || 0) + 1;

